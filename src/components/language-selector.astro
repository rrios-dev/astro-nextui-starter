---
// @ts-ignore
import { localizePath } from 'astro-i18next';
import i18next from 'i18next';

import esFlag from '@/icons/flags/es.svg';
import frFlag from '@/icons/flags/fr.svg';
import enFlag from '@/icons/flags/gb.svg';
import ptFlag from '@/icons/flags/pt.svg';

const FLAGS = {
  es: esFlag.src,
  en: enFlag.src,
  pt: ptFlag.src,
  fr: frFlag.src,
} as const;
---

<div class='flex gap-4 justify-center items-center'>
  {
    Object.entries(FLAGS).map(([lang, src]) => {
      return (
        lang !== i18next.language && (
          <a href={localizePath(Astro.url.pathname, lang)}>
            <img
              class='h-5 rounded-lg shadow-sm shadow-gray-500'
              src={src}
              alt={lang}
            />
          </a>
        )
      );
    })
  }
</div>
